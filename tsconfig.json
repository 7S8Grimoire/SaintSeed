{
  "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "lib": ["es2021"],
      "declaration": false,
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
  },
  "exclude": ["dist", "node_modules", "tests"],
}